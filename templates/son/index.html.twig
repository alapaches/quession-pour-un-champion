{% extends 'base.html.twig' %}

{% block title %}Son index{% endblock %}

{% block body %}
    <h1>Son index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Points</th>
                <th>Categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for son in sons %}
            <tr>
                <td>{{ son.nom }}</td>
                <td>{{ son.points }}</td>
                <td>{{ son.categorie.nom }}</td>
                <td>
                    <a href="{{ path('app_son_show', {'id': son.id}) }}">show</a>
                    <a href="{{ path('app_son_edit', {'id': son.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_son_new') }}">Create new</a>
{% endblock %}
