{% extends 'base.html.twig' %}

{% block title %}Liste des jeux{% endblock %}

{% block body %}
    <h1 class="center page-title">Liste des jeux</h1>
    <div class="center">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="center">Nom</th>
                    <th class="center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for jeu in jeux %}
                <tr>
                    <td class="center">{{ jeu.nom }}</td>
                    <td class="center">
                        <a class="btn btn-xs btn-secondary" role="button" href="{{ path('app_jeux_show', {'id': jeu.id}) }}">
                            <i class="fa-solid fa-eye"></i> Voir
                        </a>
                        <a class="btn btn-xs btn-warning" role="button" href="{{ path('app_jeux_edit', {'id': jeu.id}) }}">
                            <i class="fa-solid fa-pen-to-square"></i> Modifier
                        </a>
                        <a class="btn btn-xs btn-success" role="button" href="{{ path('app_jeux_play', {'id': jeu.id}) }}">
                            <i class="fa-solid fa-play"></i> Jouer
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td class="center" colspan="2">Aucune donn√©e n'est disponible</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-xs btn-primary" role="button" href="{{ path('app_jeux_new') }}">
            <i class="fa-solid fa-plus"></i> Ajouter un jeu
        </a>
    </div>
{% endblock %}