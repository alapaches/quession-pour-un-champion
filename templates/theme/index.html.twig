{% extends 'base.html.twig' %}

{% block title %}Theme index{% endblock %}

{% block body %}
    <h1 class="center page-title">Liste des themes</h1>
    <div class="center">
        <table class="table table-bordered">
            <thead class="sticky-header">
                <tr>
                    <th class="center">Nom</th>
                    <th class="center">Icone</th>
                    <th class="center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for theme in themes %}
                <tr>
                    <td class="center">{{ theme.nom }}</td>
                    <td class="center">{{ theme.icon }}</td>
                    <td class="center">
                        {{ include('theme/_delete_form.html.twig') }}
                        <a class="btn btn-xs btn-warning" role="button" href="{{ path('app_theme_edit', {'id': theme.id}) }}">
                            <i class="fa-solid fa-pen-to-square"></i> Modifier
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune donn√©e n'est disponible</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-xs btn-primary" role="button" href="{{ path('app_theme_new') }}">
            <i class="fa-solid fa-plus"></i> Ajouter un theme
        </a>
    </div>
{% endblock %}
