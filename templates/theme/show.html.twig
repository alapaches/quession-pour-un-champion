                <tr>
                    <td class="center">{{ theme.nom }}</td>
                    <td class="center">{{ theme.icon }}</td>
                </tr>
            </tbody>
        </table>
        <a class="btn btn-xs btn-secondary btn-retour" role="button" href="{{ path('app_theme_index') }}">
