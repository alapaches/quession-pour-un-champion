{% extends 'base.html.twig' %}

{% block title %}Equipes{% endblock %}

{% block body %}
    <h1 class="center page-title">Liste des équipes</h1>
    <div class="center">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="sticky-header">
                    <tr>
                        <th class="center">Nom</th>
                        <th class="center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for equipe in equipes %}
                    <tr>
                        <td class="center">{{ equipe.nom }}</td>
                        <td class="center">
                            {{ include('equipe/_delete_form.html.twig') }}
                            <a class="btn btn-xs btn-warning" role="button" href="{{ path('app_equipe_edit', {'id': equipe.id}) }}">
                                <i class="fa-solid fa-pen-to-square"></i> Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">Aucune donnée n'est disponible</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <a class="btn btn-xs btn-primary" role="button" href="{{ path('app_equipe_new') }}">
            <i class="fa-solid fa-plus"></i> Ajouter une équipe
        </a>
    </div>
{% endblock %}
